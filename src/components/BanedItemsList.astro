---
import banedItems from '../data/baned_items.json';
---

<div class="nft-list">
  {banedItems.map((item) => (
    <div class="nft-item">
      <img src={item.image_path} alt={item.name} class="nft-image" />
      <h3>{item.name}</h3>
      <p>Supply: {item.supply || 'Неизвестно'}</p>
      <p>Цена Flower: {item.snapshot_price || 'Неизвестно'}</p>
      <p>Забаненых: {item.banned_count}</p>
    </div>
  ))}
</div>

<style>
.nft-list {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
  gap: 20px;
  margin-top: 20px;
}

.nft-item {
  border: 4px solid transparent;
  border-image: url("/borders/light_border.png") 20% / 1 / 0 stretch;
  border-style: solid;
  border-width: 5.25px;
  image-rendering: pixelated;
  border-radius: 13.125px;
  padding: 15px;
  text-align: center;
}

.nft-item h3 {
  margin: 10px 0 5px 0;
}

.nft-item p {
  margin: 5px 0;
}

.nft-image {
  max-width: 100%;
  height: auto;
  border-radius: 4px;
}
</style>