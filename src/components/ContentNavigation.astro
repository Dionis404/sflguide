---
interface Props {
  currentPage?: string;
  headings?: { depth: number; slug: string; text: string }[];
}

const { currentPage = '', headings = [] } = Astro.props;
const items = (headings || []).filter((h) => h.depth <= 3);
---

<aside class="content-nav-sidebar">
  <nav class="content-nav">
    <div class="nav-header">
      <h3>Содержание</h3>
    </div>
    <ul class="nav-list">
      {
        items.map((heading) => (
          <li
            class={`nav-item depth-${heading.depth} ${
              currentPage === heading.slug ? 'active' : ''
            }`}
          >
            <a href={`#${heading.slug}`}>{heading.text}</a>
          </li>
        ))
      }
    </ul>
  </nav>
</aside>

<style>
  .content-nav-sidebar {
    position: sticky; /* Используем sticky вместо fixed */
    top: 0; /* Прилипает к верху при скролле */
    height: 100vh; /* Высота на весь экран */
    overflow-y: auto; /* Скролл только внутри панели содержания */
    border-image: url("/borders/light_border.png") 20% / 1 / 0 stretch;
    background-color: rgba(0, 0, 0, 0.05);
    padding: 16px;
    font-family: 'Roboto', sans-serif;
    font-size: 12px;
  }

  .nav-header h3 {
    margin-top: 0;
    margin-bottom: 16px;
    color: #000;
    font-size: 14px;
    font-family: 'Press Start 2P', cursive;
  }

  .nav-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .nav-item {
    margin-bottom: 8px;
  }

  .nav-item.depth-1 {
    margin-left: 0;
    font-weight: bold;
  }

  .nav-item.depth-2 {
    margin-left: 16px;
    font-weight: normal;
  }

  .nav-item.depth-3 {
    margin-left: 32px;
    font-weight: normal;
  }

  .nav-item.depth-4 {
    margin-left: 48px;
    font-weight: normal;
  }

  .nav-item.depth-5 {
    margin-left: 64px;
    font-weight: normal;
  }

  .nav-item.depth-6 {
    margin-left: 80px;
    font-weight: normal;
  }

  .nav-item a {
    display: block;
    padding: 6px 8px;
    color: #333;
    text-decoration: none;
    border-radius: 4px;
    transition: background-color 0.2s;
  }

  .nav-item a:hover {
    background-color: rgba(0, 0, 0, 0.1);
  }

  .nav-item.active a {
    background-color: #e4a672;
    color: #fff;
  }

  /* Адаптивные стили для мобильных устройств */
  @media (max-width: 768px) {
    .content-nav-sidebar {
      width: 100%;
      height: auto;
      border-left: none;
      border-bottom: 4px solid #fff;
      padding: 10px;
      position: static;
    }
    
    .nav-header h3 {
      font-size: 12px;
      margin-bottom: 12px;
      font-family: 'Press Start 2P', cursive;
    }
    
    .nav-item a {
      padding: 4px 6px;
      font-size: 10px;
      font-family: 'Roboto', sans-serif;
    }
    
    .nav-item.depth-1 {
      margin-left: 0;
    }
    
    .nav-item.depth-2 {
      margin-left: 12px;
    }
    
    .nav-item.depth-3 {
      margin-left: 24px;
    }
    
    .nav-item.depth-4 {
      margin-left: 36px;
    }
    
    .nav-item.depth-5 {
      margin-left: 48px;
    }
    
    .nav-item.depth-6 {
      margin-left: 60px;
    }
  }
</style>