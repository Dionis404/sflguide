<style>
  .welcome-container {
    display: grid;
    justify-content: center;
    align-items: center;
    height: 100vh;
    background: #1b1b1b75;
    font-family: 'Roboto', sans-serif;
    color: #fff;
  }

  .welcome-content {
    text-align: center;
    max-width: 600px;
    padding: 20px;
  }

  h1 {
    font-size: 24px;
    margin-bottom: 20px;
    color: #000000;
    padding: 10px;
    font-family: 'Press Start 2P', cursive;
  }

  .welcome-content > img {
    max-width: 70%;
    height: auto;
    display: block;
    margin: 0 auto 20px auto;
  }

  p {
    font-size: 16px;
    margin-bottom: 30px;
    line-height: 1.5;
  }

  .welcome-links {
    display: grid;
    justify-content: center;
    gap: 20px;
  }

  .welcome-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 6px;
    padding: 12px 24px;
    background: #1e6dd5;
    border: 4px solid transparent;
    border-image: url("/borders/blue_border.png") 20% / 1 / 0 stretch;
    border-style: solid;
    border-width: 5.25px;
    image-rendering: pixelated;
    border-radius: 13.125px;
    color: #fff;
    text-decoration: none;
    font-family: 'Press Start 2P', cursive;
    font-size: 14px;
  }

  .menu-icon {
    height: 1.5em;
    width: auto;
    image-rendering: pixelated;
    vertical-align: middle;
    margin: 0;
    display: inline;
  }

  .welcome-button:hover {
    color: #ffee33;
    background: #1e7ab6;
  }

  /* Адаптивные стили для мобильных устройств */
  @media (max-width: 768px) {
    .welcome-content {
      padding: 15px;
      max-width: 90%;
    }
    
    h1 {
      font-size: 20px;
      margin-bottom: 15px;
    }
    
    p {
      font-size: 14px;
      margin-bottom: 20px;
    }
    
    .welcome-links {
      flex-direction: column;
      gap: 15px;
      align-items: center;
    }
    
    .welcome-button {
      font-size: 12px;
      padding: 10px 20px;
      gap: 4px;
    }

    .menu-icon {
      height: 1.5em;
      width: auto;
    }
  }

  @media (max-width: 480px) {
    .welcome-container {
      height: 100vh;
    }
    
    .welcome-content {
      padding: 10px;
    }
    
    h1 {
      font-size: 18px;
      margin-bottom: 10px;
    }
    
    p {
      font-size: 12px;
      margin-bottom: 15px;
    }
    
    .welcome-button {
      font-size: 10px;
      padding: 8px 16px;
      gap: 3px;
    }

    .menu-icon {
      height: 1.5em;
      width: auto;
    }
  }
</style>
