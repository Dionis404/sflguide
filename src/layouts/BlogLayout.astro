---
import "../styles/main.css";
import TopMenu from "../components/TopMenu.astro";
import { seoConfig, generateMetaTags, generateOpenGraphTags, generateTwitterTags } from "../../seo.config.js";

const { title = seoConfig.defaults.blog.title } = Astro.props;
const metaTags = generateMetaTags('blog', { title });
const ogTags = generateOpenGraphTags(metaTags);
const twitterTags = generateTwitterTags(metaTags);

// Получаем текущий путь для передачи в TopMenu
const currentPath = Astro.url.pathname;
---

<html lang="ru">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <meta name="description" content={metaTags.description}>
    <meta name="keywords" content={seoConfig.site.keywords}>
    <meta name="author" content={seoConfig.site.author}>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <!-- Open Graph -->
    <meta property="og:title" content={ogTags['og:title']} />
    <meta property="og:description" content={ogTags['og:description']} />
    <meta property="og:type" content={ogTags['og:type']} />
    <meta property="og:url" content={ogTags['og:url']} />
    <meta property="og:image" content={ogTags['og:image']} />
    <meta property="og:site_name" content={ogTags['og:site_name']} />
    <!-- Twitter Card -->
    <meta name="twitter:card" content={twitterTags['twitter:card']} />
    <meta name="twitter:title" content={twitterTags['twitter:title']} />
    <meta name="twitter:description" content={twitterTags['twitter:description']} />
    <meta name="twitter:image" content={twitterTags['twitter:image']} />
    <meta name="twitter:site" content={twitterTags['twitter:site']} />
    <meta name="twitter:creator" content={twitterTags['twitter:creator']} />
  </head>
  <body>
    <TopMenu currentPath={currentPath} />
    <main class="blog">
      <article class="blog-post">
        <slot />
      </article>
    </main>
  </body>
</html>
