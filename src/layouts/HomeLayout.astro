---
import "../styles/main.css";
const { title = "Goblin Guides" } = Astro.props;
---

<html lang="ru">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <meta name="description" content="Гайды по игре Sunflower Land - фракции, монеты, лайфхаки и полезные советы для игроков">
    <meta name="keywords" content="Sunflower Land, гайды, фракции, монеты, лайфхаки, Stardew Valley">
    <meta name="author" content="Goblin Guides">
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <!-- Open Graph -->
    <meta property="og:title" content="{title}" />
    <meta property="og:description" content="Гайды по игре Sunflower Land - фракции, монеты, лайфхаки и полезные советы" />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="/image/GoblinGuides.png" />
  </head>
  <body class="home-page">
    <main class="home">
      <slot />
    </main>
  </body>
</html>
